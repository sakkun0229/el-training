<h2>name: <%= @user.name %></h2>
<p>email: <%= @user.email %></p>

<%if @user.id == @current_user.id%>
<div>
<%= link_to("ユーザー情報編集", "/users/#{@user.id}/edit") %>
</div>
<%end%>

<table class="table" border="1">
  <tr>
    <th>user</th>
    <th>title</th>
    <th>content</th>
    <th>status</th>
    <th>priority</th>
    <th>deadline</th>
    <th>update</th>
  </tr>
  <% @user.posts.each do |post| %>
  <tr>
    <td><%=link_to(post.user.name, "/users/#{post.user.id}")%></td>
    <td><%=link_to(post.title , "/#{post.id}")%></td>
    <td><%=post.content%></td>
    <td><%=post.status%></td>
    <td><%=post.priority%></td>
    <td><%=post.deadline%></td>
    <td><%=post.updated_at%></td>
  </tr>
  <% end %>
</table>
