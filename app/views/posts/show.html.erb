
<p>担当者:
  <%= link_to(@user.name, "/users/#{@user.id}") %>
</p>

<div>
  title:<%= @post.title %><br>
</div>

<p>タスク内容<br>
<%= @post.content %>
</p>

<p>締切<br>
  <%= @post.deadline %>
</p>

<p>
  status:<%= @post.status%>
  priority:<%= @post.priority%>
</p>

<p>更新日<br>
  <%= @post.updated_at %>
</p>

<%if @user.id == @current_user.id%>
<div>
<%= link_to("編集", "/#{@post.id}/edit")%>
<%= link_to("削除", "/#{@post.id}/destroy",{method: "post"}) %>
</div>
<%end%>
